{
    "name": "nextjs-starter",
    "version": "5.0.0",
    "private": true,
    "scripts": {
        "prepare": "node .husky/install.mjs",
        "build": "next build",
        "dev": "kill-port 3000 && next dev -p 3000",
        "prod": "next start",
        "check:ts": "tsc --project tsconfig.json --noEmit --pretty",
        "check:lint": "next lint",
        "check:format": "prettier . --write --cache --log-level=silent",
        "check:test": "vitest run",
        "check:all": "npm run check:ts && npm run check:lint && npm run check:test && npm run check:format",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "analyze": "ANALYZE=true npm run build",
        "clean": "rimraf .next",
        "type-coverage": "npx typescript-coverage-report",
        "cruiser": "depcruise app --config .dependency-cruiser.js --output-type dot | dot -T svg -Grankdir=TD | tee dependency-graph.svg | depcruise-wrap-stream-in-html > ./docs.html"
    },
    "dependencies": {
        "@hookform/resolvers": "3.3.4",
        "@repo/api": "workspace:*",
        "@repo/core": "workspace:*",
        "@repo/design-tokens": "workspace:*",
        "@repo/eslint-config": "workspace:*",
        "@repo/tailwind-config": "workspace:*",
        "@repo/ts-config": "workspace:*",
        "@sentry/nextjs": "7.109.0",
        "@t3-oss/env-nextjs": "0.9.2",
        "@tanstack/react-query": "5.29.0",
        "@tanstack/react-query-devtools": "5.29.0",
        "@tanstack/react-query-next-experimental": "5.29.0",
        "axios": "1.6.8",
        "class-variance-authority": "0.7.0",
        "clsx": "2.1.0",
        "immer": "10.0.4",
        "isomorphic-dompurify": "2.7.0",
        "lodash-es": "4.17.21",
        "lucide-react": "0.366.0",
        "nanoid": "5.0.7",
        "next": "14.1.4",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-hook-form": "7.51.2",
        "react-use": "17.5.0",
        "server-only": "0.0.1",
        "sharp": "0.33.3",
        "tailwind-merge": "2.2.2",
        "tailwindcss-animate": "1.0.7",
        "zod": "3.22.4",
        "zustand": "4.5.2"
    },
    "devDependencies": {
        "@next/bundle-analyzer": "14.1.4",
        "@testing-library/jest-dom": "6.4.2",
        "@testing-library/react": "14.3.0",
        "@testing-library/user-event": "14.5.2",
        "@total-typescript/ts-reset": "0.5.1",
        "@types/lodash-es": "4.17.12",
        "@types/node": "20.12.7",
        "@types/react": "18.2.75",
        "@types/react-dom": "18.2.24",
        "@typescript-eslint/eslint-plugin": "6.21.0",
        "@typescript-eslint/parser": "6.21.0",
        "@vitejs/plugin-react": "4.2.1",
        "@vitest/coverage-v8": "1.4.0",
        "autoprefixer": "10.4.19",
        "commitizen": "4.3.0",
        "cssnano": "6.1.2",
        "cz-conventional-changelog": "3.3.0",
        "dependency-cruiser": "16.3.0",
        "eslint": "8.57.0",
        "eslint-config-next": "14.1.4",
        "eslint-config-webpractik": "github:webpractik/eslint-config-webpractik",
        "eslint-plugin-tailwindcss": "3.15.1",
        "git-cz": "4.9.0",
        "husky": "9.0.11",
        "jiti": "1.21.0",
        "jsdom": "24.0.0",
        "kill-port": "2.0.1",
        "lint-staged": "15.2.2",
        "postcss": "8.4.38",
        "prettier": "3.2.5",
        "rimraf": "5.0.5",
        "tailwindcss": "3.4.3",
        "turbo": "1.13.2",
        "typescript": "5.4.4",
        "vite-tsconfig-paths": "4.3.2",
        "vitest": "1.4.0"
    },
    "engines": {
        "node": "^20",
        "npm": "^10"
    },
    "config": {
        "commitizen": {
            "path": "git-cz"
        }
    },
    "workspaces": [
        "packages/*"
    ],
    "trustedDependencies": [
        "@sentry/cli",
        "core-js-pure",
        "es5-ext"
    ]
}
